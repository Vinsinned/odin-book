extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Title' name='title' required='true' value=(undefined===comment ? '' : comment.title) )
      br
      label(for='content') Content:
      input#content.form-control(type='text', placeholder='Content' name='content' required='true' value=(undefined===comment ? '' : comment.content))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg
  