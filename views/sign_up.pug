extends layout

block content
  h1=title

  if (user === undefined)
    form(method='POST' action='')
      div.form-group
        label(for='first_name') First Name:
        input#first_name.form-control(type='text', placeholder='First name (Vinson)' name='first_name' required='true' value=(undefined===user ? '' : user.first_name) )
        br
        label(for='last_name') Last Name:
        input#last_name.form-control(type='text', placeholder='Last name (Surname)' name='last_name' required='true' value=(undefined===user ? '' : user.last_name))
      div.form-group
        label(for='username') Username:
        input#username.form-control(type='email', placeholder='Username (Email)' name='username' required='true' value=(undefined===user ? '' : user.username))
      div.form-group
        label(for='password') Password:
        input#password.form-control(type='password', placeholder='Password' name='password' required='true' value=(undefined===user ? '' : user.password))
        br
        label(for='confirmPassword') Confirm Password:
        input#confirmPassword.form-control(type='text', placeholder='Confirm Password' name='confirmPassword' required='true' value=(undefined===user ? '' : user.confirmPassword))
      div.form-group
        label(for='image') Profile Image:
        input#image.form-control(type='text', placeholder='Link' name='image' value=(undefined===user ? '' : user.password))
      button.btn.btn-primary(type='submit') Submit

    if errors 
      ul
        for error in errors
          li!= error.msg
  else 
    h3 You already signed up!